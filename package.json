{
  "name": "hangman",
  "version": "1.0.0",
  "description": "An Express application and API for playing Hangman",
  "main": "index.js",
  "repository": "git@github.com:camlegleiter/hangman.git",
  "author": "Cameron Legleiter <camlegleiter@gmail.com>",
  "license": "The Unlicense",
  "scripts": {
    "lint": "eslint src/ test/",
    "start": "node --require babel-register index.js",
    "test": "yarn test:spec && yarn test:http",
    "test:coverage": "nyc --require babel-register --reporter=text --reporter=text-summary ./node_modules/mocha/bin/_mocha --require test/.setup.js test/**/*.js",
    "test:spec": "mocha --require babel-register --require test/.setup.js test/**/*.spec.js",
    "test:http": "mocha --require babel-register --require test/.setup.js test/**/*.http.js"
  },
  "dependencies": {
    "babel-core": "^6.22.1",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "babel-register": "^6.22.0",
    "config": "^1.25.1",
    "express": "^4.14.1",
    "helmet": "^3.4.0",
    "js-yaml": "^3.8.1",
    "log4js": "^1.1.0",
    "morgan": "^1.8.0",
    "pug": "^2.0.0-beta11",
    "rotating-file-stream": "^1.1.7",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "babel-preset-env": "^1.1.8",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "cheerio": "^0.22.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "supertest": "^3.0.0"
  }
}
